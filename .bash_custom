printf "\n"

export PATH="$PATH:$HOME/bin"

# TODO Not really using this function.
function function_exists {
    declare -f -F $1;
    return $?;
}

# TODO Do we really need the absolute path?
CONF_DIR=$(readlink -f $HOME/.bash_conf.d)

# Do nothing if the config directory doesn't exist.
if [ ! -d $CONF_DIR ]; then
    printf "conf dir not found: %s\n" $CONF_DIR
    exit 0
fi

# Get all bash config files starting with numeric characters.
CONF_FILES=$(find -L $CONF_DIR -iname '[[:digit:]]*' -type f -printf '%f\n' | sort -n)

# Include all bash config files in order listed.
for file in $CONF_FILES; do
    file=$CONF_DIR/$file
    if [ -f $file ]; then
        printf "loading %s\n" $file
        source $file
    fi
done

printf "\n"

