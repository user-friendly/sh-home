while [ -n "$1" ]; do
    ARG="$1"
    if [ -a "$ARG" ]; then
        FILE=$(realpath -ezP "$ARG")
        if [ "$?" = "0" ] && [ -a "$FILE" ]; then
            ARG=\'$(cygpath -a -w "$FILE" 2> /dev/null)\'
        fi
    fi
    OPTIONS="$OPTIONS $ARG"
    shift
done

