# 
# Attach to existing tmux session.
#

if [ "0" = "$(which tmux >&/dev/null; echo $?)" ] \
   && [ "0" = "$(tmux has >&/dev/null; echo $?)" ] \
   && [ -z $TMUX ] && [ "$TMUX_ATTACH" = "yes" ];
then
	echo
	read -p "Do you want to attach to the existing tmux session? " _attach_to_tmux
	if [ "$_attach_to_tmux" = "y" ] || [ "$_attach_to_tmux" = "yes" ]; then
		tmux attach
	fi
	echo;
fi
